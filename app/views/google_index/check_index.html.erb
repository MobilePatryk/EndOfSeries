<%= form_with do |form| %>
 <div class="form-group">
      <div class="control-label col-sm-2">
        <%= form.label :name %>
      </div>
      <div class="col-sm-8">
        <%= form.text_field :name, id: :keyword_name, class: "form-control", placeholder: "Keyword", autofocus: true %>
      </div>
 </div>
 
 <div class="form-group">
      <div class="control-label col-sm-2">
        <%= form.label :site_name %>
      </div>
      <div class="col-sm-8">
        <%= form.text_field :site_name, id: :site_name, class: "form-control", placeholder: "Site url", autofocus: true %>
      </div>
 </div>
  <%= form.submit class: "btn btn-primary btn-lg" %>
 
<%end%>